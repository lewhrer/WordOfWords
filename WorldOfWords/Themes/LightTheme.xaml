<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:WorldOfWords.Themes">

    <system:String x:Key="DetailsBackground">White</system:String>
    <system:String x:Key="BorderCreateEditBackground">Gray</system:String>
    <system:String x:Key="BorderBackground">Black</system:String>

    <!-- TextBlock -->
    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="Black"/>
    </Style>
</ResourceDictionary>