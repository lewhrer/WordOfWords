<Window x:Class="WorldOfWords.View.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldOfWords.View"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Menu">
                <MenuItem Header="Create" Command="{Binding CreateCommand}" />
                <MenuItem Header="Train" Command="{Binding TrainCommand}" />
                <MenuItem Header="AllWords" Command="{Binding AllWordsCommand}" />
                <MenuItem Header="0 %" Command="{Binding Know0Command}" />
                <MenuItem Header="25 %" Command="{Binding Know25WordsCommand}" />
                <MenuItem Header="50 %" Command="{Binding Know50WordsCommand}" />
                <MenuItem Header="75 %" Command="{Binding Know75WordsCommand}" />
                <MenuItem Header="Know words" Command="{Binding KnowWordsCommand}" />
            </MenuItem>
        </Menu>
        <Frame 
            Name="MenuFrame"
            Grid.Row="1"
			NavigationUIVisibility="Hidden"
            />
    </Grid>
</Window>
