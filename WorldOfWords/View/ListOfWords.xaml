<Page x:Class="WorldOfWords.View.ListOfWords"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorldOfWords.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListOfWords">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding NamePage}" FontSize="30" Margin="314,-2,37,2"/>
        <ListBox Grid.Row="1" ItemsSource="{Binding Words}"
                 SelectedItem="{Binding SelectedWord}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="18" Text="{Binding Path=Name}" />
                        <TextBlock Text="{Binding Path=TranslateName}" />
                        <TextBlock Text="{Binding Path=Level}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button 
                Grid.Column="0"
                Content="Show" 
                Command="{Binding MoreCommand}"
                />
            <Button 
                Grid.Column="1"
                Content="0 %" 
                Command="{Binding Know0Command}"
                />
            <Button 
                Grid.Column="2"
                Content="25 %" 
                Command="{Binding Know25Command}"
                />
            <Button 
                Grid.Column="3"
                Content="50 %" 
                Command="{Binding Know50Command}"
                />
            <Button 
                Grid.Column="4"
                Content="75 %" 
                Command="{Binding Know75Command}"
                />
            <Button 
                Grid.Column="5"
                Content="100 %" 
                Command="{Binding Know100Command}"
                />
            <Button 
                Grid.Column="6"
                Content="Edit" 
                Command="{Binding EditCommand}"
                />
            <Button 
                Grid.Column="7"
                Content="Detele" 
                Command="{Binding DeleteCommand}"
                />
        </Grid>
    </Grid>
</Page>
