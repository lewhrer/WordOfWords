<Page x:Class="WorldOfWords.View.ListOfWords"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorldOfWords.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListOfWords">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock Name="NamePage"
            Grid.Row="0" 
            Text="{Binding NamePage}" 
            FontSize="30" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            />
        <StackPanel Name="TotalCount"
            Grid.Row="0"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
                    Margin="0,0,10,0"
            >
            <TextBlock 
                Text="Загальна кількість: "
                FontSize="20" 
                />
            <TextBlock 
                Text="{Binding TotalCount}" 
                FontSize="20" 
                />
            
        </StackPanel>
        <ListBox Grid.Row="1" ItemsSource="{Binding Words}"
                 SelectedItem="{Binding SelectedWord}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Border 
                            Grid.Row="0"
                            Background="Black"
                            Margin="-10,0,-10,0"
                            />
                        <Grid Grid.Row="1" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="180" />
                            </Grid.ColumnDefinitions>
                            <TextBlock 
                                Grid.Column="0" 
                                Grid.Row="1" 
                                FontSize="28" 
                                Text="{Binding Path=Level}"
                                VerticalAlignment="Center"
                                />
                            <Border 
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="1"
                                Background="Black"
                                Margin="0,-5,0,-5"
                                />
                            <TextBlock 
                                Grid.Column="2" 
                                Grid.Row="1"
                                FontSize="28" 
                                Width="auto"
                                Text="{Binding Path=Name}" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center"
                                />
                            <TextBlock 
                                Grid.Column="3" 
                                Grid.Row="1"
                                FontSize="20"
                                Width="auto"
                                Text="{Binding Path=TranslateName}" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center"
                                />

                            <Grid
                                Grid.Row="1"
                                Grid.Column="4"
                                HorizontalAlignment="Right"
                                >
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Updated: " />
                                    <TextBlock  Text="{Binding Path=LastUpdate}" />
                                </StackPanel>
                                <StackPanel 
                                    VerticalAlignment="Bottom" 
                                    HorizontalAlignment="Right" 
                                    Orientation="Horizontal"
                                    >
                                    <TextBlock Text="Priority: " />
                                    <TextBlock  Text="{Binding Path=Priority}" />
                                </StackPanel>
                            </Grid>
                        </Grid>
                        
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
