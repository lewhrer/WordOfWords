        <Grid 
            Grid.Row="2"
            VerticalAlignment="Center"  
              >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
           
            <Button 
                Grid.Column="1"
                Content="Не знаю" 
                Command="{Binding Know0Command}"
                Background="Red"
                Margin="5,0"
                />
            <Button 
                Grid.Column="2"
                Content="Не пригадую" 
                Command="{Binding Know25Command}"
                Background="Gray"
                Margin="5,0"
                />
            <Button 
                Grid.Column="3"
                Content="Пригадую" 
                Command="{Binding Know50Command}"
                Background="Orange"
                Margin="5,0"
                />
            <Button 
                Grid.Column="4"
                Content="Знаю" 
                Command="{Binding Know75Command}"
                Background="YellowGreen"
                Margin="5,0"
                />
            <Button 
                Grid.Column="5"
                Content="Відмінно знаю" 
                Command="{Binding Know100Command}"
                Background="Green"
                Margin="5,0"
                />
        
        </Grid>
    </Grid>
