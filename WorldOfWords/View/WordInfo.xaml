<Page x:Class="WorldOfWords.View.WordInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorldOfWords.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WordInfo">

    <Grid DataContext="{Binding Word}">
        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="61,54,0,0" 
            TextWrapping="Wrap" 
            Text="{Binding Name}" 
            VerticalAlignment="Top"
            FontSize="50"
            />

        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="440,314,0,0" 
            TextWrapping="Wrap" 
            Text="{Binding TranslateName}" 
            VerticalAlignment="Top"
            FontSize="50"
            />
        
        <Image Name="ImgPicture" HorizontalAlignment="Left" Height="160" Margin="452,42,0,0" VerticalAlignment="Top" Width="270"
               Source="../Resources/temp.jpg"
               />

        <TextBox Name="TbxExample" HorizontalAlignment="Left" Height="160" Margin="22,253,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="318"
                 Text="{Binding Example}"
                 />
    </Grid>
</Page>
