                                Grid.Column="2"
                                Grid.Row="1"
                                HorizontalAlignment="Left"
                                Margin="0,10"
                                Width="50"
                                Text="{Binding NotMemorized, UpdateSourceTrigger=PropertyChanged}"
                                />
                        <StackPanel
                                Orientation="Horizontal"
                                Grid.Column="0" 
                                Grid.Row="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                >
                            <TextBlock 
                                        FontSize="20"
                                        Text="{Binding Source={StaticResource Memorized}}"
                                        />
                            <TextBlock 
                                        FontSize="20"
                                        Text=": "
                                        />
