<Page x:Class="WorldOfWords.View.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorldOfWords.View"
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <Grid>
        <ComboBox x:Name="cmbThemes" Margin="309,38,341,372" Width="150" Height="40" SelectedIndex="0">
            <!--<ComboBoxItem Content="None" />-->
            <ComboBoxItem Content="Light Blue" Tag="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Blue.xaml"/>
            <ComboBoxItem Content="Dark Red" Tag="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Dark.Red.xaml"/>
        </ComboBox>
        <Button Height="40" Width="140" Content="Light Blue" Margin="406,194,254,216">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction
                            Command="{Binding DoubleCommand}"
                            CommandParameter="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Light.Blue.xaml"
                             />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>

        <Button Height="40" Width="140" Content="Dark Red" Margin="155,192,505,218">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction
                            Command="{Binding DoubleCommand}"
                            CommandParameter="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Dark.Red.xaml"
                             />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>
    </Grid>
</Page>
