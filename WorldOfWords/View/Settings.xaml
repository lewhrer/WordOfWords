                                Width="50"
                                Text="{Binding Memorized, UpdateSourceTrigger=PropertyChanged}"
                                />
                        <StackPanel
                                Orientation="Horizontal"
                                Grid.Column="0" 
                                Grid.Row="3"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                >
                            <TextBlock 
                                        FontSize="20"
                                        Text="{Binding Source={StaticResource Learned}}"
                                        />
                            <TextBlock 
                                        FontSize="20"
                                        Text=": "
                                        />
                        </StackPanel>
                        <TextBox 
                                Grid.Column="4"
