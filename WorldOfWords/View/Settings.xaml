                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            FontSize="20"
                            Text="{Binding Source={StaticResource RepeatedDays}}"
                            Margin="0,10"
                            />
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
